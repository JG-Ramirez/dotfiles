{
  "codeLens.enable": true,
  "suggest.enablePreview": true,
  "diagnostic.virtualText": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/mycoolsnippets",
  "suggest.maxCompleteItemCount": 20,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "eslint.options": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "semi": 0,
      "space-before-blocks": 0,
      "quotes": 0,
      "no-var": 0,
      "indent": 0
    }
  },
  "less.validate": true,
  "scss.validate": true,
  "less.lint.argumentsInColorFunction": "warning",
  "coc.preferences.extensionUpdateCheck": "daily",
  "emmet.extensionsPath": "~/.config/nvim/emmet_custom",
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.optimizeStylesheetParsing": false,
  "emmet.includeLanguages": {
    "liquid": "html",
    "html.twig": "html",
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "filters": "html, bem"
    }
  },
  "emmet.preferences": {
    "bem.elementSeparator": "__",
    "bem.modifierSeparator": "--",
    "bem.shortElementPrefix": "-"
  },
  "emmet.showAbbreviationSuggestions": true,
  "todolist.autoUpload": true,
  "todolist.monitor": true,
  "tailwindCSS.trace.server": "verbose",
  "tailwindCSS.emmetCompletions": true
}
